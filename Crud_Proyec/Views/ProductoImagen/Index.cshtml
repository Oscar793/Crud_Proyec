@model IEnumerable<Crud_Proyec.Models.producto_imagen>

@{
    ViewBag.Title = "Index";
}

<h2>Image del producto</h2>

<p>
    @Html.ActionLink("Nueva Imagen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Imagen
        </th>
        <th>
            Producto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.imagen)
            </td>
            <td>
                @Crud_Proyec.Controllers.ProductoImagenController.IMGProducto(item.id_producto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
$(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })</script>
}
