@model IEnumerable<Crud_Proyec.Models.usuariorol>

@{
    ViewBag.Title = "Index";
}

<h2>Rol Usuario</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            UsuarioRol
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Crud_Proyec.Controllers.UsuarioRolController.NombreUsuarioRol(item.idUsuario)

            </td>
            <td>
                @Crud_Proyec.Controllers.UsuarioRolController.NombreRol(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>