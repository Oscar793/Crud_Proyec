@model Crud_Proyec.Models.compra

@{
    ViewBag.Title = "Details";
    var nombreClienteCompra = Model.id_cliente;
}

<h2>Detalle @nombreClienteCompra</h2>

<div>
    <h4>compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>
        <dt>
            Total
        </dt>
        <dd>
            @Html.DisplayFor(model => model.total)
        </dd>
        <dt>
            Cliente
        </dt>
        <dt>
            @Crud_Proyec.Controllers.ComprasController.NombreCliente(Model.id_cliente)
        </dt>
        <dt>
            Usuario
        </dt>
        <dt>
            @Crud_Proyec.Controllers.ComprasController.NombreUsuario(Model.id_usuario)
        </dt>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
